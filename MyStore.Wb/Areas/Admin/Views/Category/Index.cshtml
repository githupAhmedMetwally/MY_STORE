@model IEnumerable<Category>
@{
    ViewBag.PageTitle = "Category Mangement";
    ViewBag.CardTitle = "All Categories";
    Layout = "~/Views/Shared/_DashBoard.cshtml";
}
 
<a class="btn btn-primary" href="/Admin/Category/Create">Create</a>
<br />
<table class="table table-hover" width="100%">
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>CreatedTime</th>
        <th>Actions</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.CreatedTime</td>
            <td>
                <a class="btn btn-success" href="/Admin/Category/Edit/@item.Id">Edit</a>
                <a class="btn btn-danger" href="/Admin/Category/Delete/@item.Id">Delete</a>
            </td>
        </tr>
    }
</table>
