@model IEnumerable<Product>
 @using X.PagedList.Mvc.Core;
 @using X.PagedList;
@using X.PagedList.Mvc.Core.Common
<html>
    <head>
    <link rel="stylesheet" href="./assets/styles/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />
    <link rel="stylesheet" href="~/css/productIndex.css">
    </head>
    <body>
    <section class="py-5" style="background:#008080">
        <div class="container  px-lg-5 ">
            <div style="display:flex;align-items:center;justify-content:space-between;margin-bottom:60px">
                <div class="dropdown" >
                    <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Sorted By :
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/Customer/Home/OrderByAsc">Price: Low To High</a></li>
                        <li><a class="dropdown-item" href="/Customer/Home/OrderByDesc">Price: High To Low</a></li>

                    </ul>
                </div>
                <div class="footer_text">
                    <form asp-action="Search" asp-controller="Home" asp-area="Customer" style="width:400px">
                        <input type="text" placeholder="Search . . ." name="temp">
                        <button type="submit" class="common_btn">Search</button>
                    </form>
                </div>
          </div>

            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">



                @foreach (var item in Model)
                {
                    <div class="col mb-5">
                        <div class="card h-100">
                            <!-- Product image-->
                            <a asp-action="Details" asp-route-ProductId="@item.Id"><img class="card-img-top" src="~/@item.Img" alt="..." width="450" height="300" /></a>
                            <!-- Product details-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <!-- Product name-->
                                    <h5 class="fw-bolder">@item.Name</h5>
                                    <!-- Product price-->
                                    $@item.Price
                                </div>
                            </div>
                            <!-- Product actions-->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center">
                                    <a asp-action="Details" asp-route-ProductId="@item.Id" class="btn btn-outline-dark mt-auto">View Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>

            <div class="container px-4 px-lg-5 mt-5">
                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">

                    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page = page }),
                             new PagedListRenderOptions
                    {
                        LiElementClasses = new string[] { "page-item" },
                        PageClasses = new string[] { "page-link" }
                    })
                </div>
            </div>


        </div>
    </section>

    </body>
</html>

